---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			timeZone: 'UTC', // We assume that the date is in UTC because no timezone is provided
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
